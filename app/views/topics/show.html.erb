<div class="container-md py-4">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card post-card">

        <div class="card-header post-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-white">
              <i class="bi bi-collection me-2"></i>Topic Details
            </h5>
            <span class="topic-id-badge">
              ID: #<%= @topic.id %>
            </span>
          </div>
        </div>

        <div class="card-body post-body">

          <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
              <i class="bi bi-check-circle me-2"></i><%= flash[:notice] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i><%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <!-- Informações do Tópico -->
          <div class="topic-content-section mb-4">
            <div class="topic-meta mb-3">
              <div class="user-avatar-small">
                <%= @topic.user.name[0].upcase %>
              </div>
              <div>
                <span class="fw-medium"><%= @topic.user.name %></span>
                <small class="text-muted">• Created <%= time_ago_in_words(@topic.created_at) %> ago</small>
              </div>
            </div>
            
            <h1 class="topic-title fw-bold mb-3"><%= @topic.title %></h1>
            
            <% if @topic.description.present? %>
              <div class="topic-description">
                <p class="topic-text"><%= simple_format(@topic.description) %></p>
              </div>
            <% else %>
              <div class="topic-description">
                <p class="text-muted fst-italic">No description provided</p>
              </div>
            <% end %>

            <div class="topic-stats d-flex flex-wrap gap-3 mt-3">
              <span class="stat-badge">
                <i class="bi bi-file-text me-1"></i><%= @topic.posts.count %> posts
              </span>
              <span class="stat-badge">
                <i class="bi bi-calendar me-1"></i><%= @topic.created_at.strftime("%d/%m/%Y") %>
              </span>
              <% if @topic.updated_at != @topic.created_at %>
                <span class="stat-badge">
                  <i class="bi bi-arrow-clockwise me-1"></i>Updated <%= time_ago_in_words(@topic.updated_at) %> ago
                </span>
              <% end %>
            </div>
          </div>

          <hr class="section-divider">

          <!-- Posts do Tópico -->
          <div class="posts-section">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h5 class="section-title mb-0">
                <i class="bi bi-list-ul me-2"></i>
                Posts in this Topic <span class="posts-count">(<%= @topic.posts.count %>)</span>
              </h5>
              <%= link_to new_post_path(topic_id: @topic.id), class: "btn btn-dark btn-sm d-flex align-items-center gap-2" do %>
                <i class="bi bi-plus-circle"></i>New Post
              <% end %>
            </div>

            <% if @topic.posts.any? %>
              <div class="posts-list">
                <% @topic.posts.order(created_at: :desc).each do |post| %>
                  <div class="post-item-card">
                    <div class="post-item-body">
                      <div class="post-item-content">
                        <h6 class="post-item-title mb-2">
                          <%= link_to post.title, post, class: "text-decoration-none text-dark fw-semibold" %>
                        </h6>
                        <p class="post-item-preview text-muted mb-2">
                          <%= truncate(post.content, length: 120) %>
                        </p>
                        <div class="post-item-meta d-flex flex-wrap align-items-center gap-3">
                          <small class="text-dark fw-medium">
                            <i class="bi bi-person me-1"></i><%= post.user.name %>
                          </small>
                          <small class="text-muted">
                            <i class="bi bi-clock me-1"></i><%= time_ago_in_words(post.created_at) %> ago
                          </small>
                          <small class="text-muted">
                            <i class="bi bi-chat me-1"></i><%= post.comments.count %> comments
                          </small>
                        </div>
                      </div>
                      <div class="post-item-actions">
                        <%= link_to post_path(post), class: "btn btn-action btn-view", title: "View Post" do %>
                          <i class="bi bi-eye"></i>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="empty-posts-state text-center py-5">
                <i class="bi bi-file-text display-4 mb-3 text-muted"></i>
                <h6 class="text-muted mb-2">No posts yet in this topic</h6>
                <p class="text-muted small mb-3">Be the first to start a discussion</p>
                <%= link_to new_post_path(topic_id: @topic.id), class: "btn btn-dark btn-sm" do %>
                  <i class="bi bi-plus-circle me-2"></i>Create First Post
                <% end %>
              </div>
            <% end %>
          </div>

        </div>

        <div class="card-footer post-footer">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex gap-3">
              <%= link_to edit_topic_path(@topic), class: "btn btn-outline-dark btn-sm d-flex align-items-center gap-2" do %>
                <i class="bi bi-pencil"></i>Edit Topic
              <% end %>
              <button type="button" class="btn btn-outline-danger btn-sm d-flex align-items-center gap-2"
                      data-bs-toggle="modal" data-bs-target="#deleteTopicModal">
                <i class="bi bi-trash"></i>Delete Topic
              </button>
            </div>
            <%= link_to topics_path, class: "btn btn-dark btn-sm d-flex align-items-center gap-2" do %>
              <i class="bi bi-arrow-left"></i>Back to Topics
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- Delete Topic Modal -->
<div class="modal fade" id="deleteTopicModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title">Delete Topic</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the topic "<strong><%= @topic.title %></strong>"?</p>
        <div class="alert alert-warning border">
          <i class="bi bi-exclamation-triangle me-2"></i>
          This will also delete <strong><%= @topic.posts.count %></strong> posts associated with this topic.
        </div>
        <small class="text-muted">This action cannot be undone.</small>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to topic_path(@topic), method: :delete, class: "btn btn-danger" do %>
          <i class="bi bi-trash me-1"></i>Delete Topic
        <% end %>
      </div>
    </div>
  </div>
</div>

