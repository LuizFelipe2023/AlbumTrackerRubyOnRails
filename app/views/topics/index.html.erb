<div class="container-md py-4 topics-container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-10 col-md-12">
    
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-dark"><i class="bi bi-collection me-2"></i>Community Topics</h4>
        <%= link_to new_topic_path, class: "btn btn-dark btn-sm d-flex align-items-center gap-2" do %>
          <i class="bi bi-plus-circle"></i>New Topic
        <% end %>
      </div>

      <div class="card filter-card mb-4">
        <div class="card-body p-4">
          <h6 class="fw-semibold mb-3 text-dark">
            <i class="bi bi-funnel me-2"></i>Filter & Sort Topics
          </h6>
          
          <%= form_with url: topics_path, method: :get, local: true, class: "row g-3 align-items-end" do |form| %>
  
            <div class="col-md-5">
              <%= form.label :search, "Search Topics", class: "form-label fw-medium text-dark mb-2" %>
              <%= form.text_field :search, 
                  value: params[:search], 
                  class: "form-control form-control-sm", 
                  placeholder: "Enter topic name..." %>
            </div>
            
            <div class="col-md-4">
              <%= form.label :sort, "Sort By", class: "form-label fw-medium text-dark mb-2" %>
              <%= form.select :sort, 
                  options_for_select([
                    ['Most Recent', 'recent'],
                    ['Oldest First', 'oldest'],
                    ['Most Posts', 'most_posts']
                  ], selected: @sort), 
                  {}, 
                  class: "form-select form-select-sm choices-topic" %>
            </div>
            
            <div class="col-md-3">
              <div class="d-flex gap-2">
                <%= form.submit "Apply Filters", class: "btn btn-dark btn-sm flex-fill" %>
                <%= link_to "Clear", topics_path, class: "btn btn-outline-secondary btn-sm flex-fill" %>
              </div>
            </div>
          <% end %>

          <% if params[:search].present? || @sort != 'recent' %>
            <div class="mt-3 pt-3 border-top">
              <small class="text-muted fw-medium">Active Filters:</small>
              <div class="d-flex flex-wrap gap-2 mt-1">
                <% if params[:search].present? %>
                  <span class="badge bg-dark bg-opacity-10 text-dark border">
                    <i class="bi bi-search me-1"></i>"<%= params[:search] %>"
                    <%= link_to topics_path(sort: @sort), class: "text-dark ms-1" do %>
                      <i class="bi bi-x"></i>
                    <% end %>
                  </span>
                <% end %>
                <% if @sort != 'recent' %>
                  <span class="badge bg-dark bg-opacity-10 text-dark border">
                    <i class="bi bi-sort-down me-1"></i>
                    <%= case @sort
                        when 'oldest' then 'Oldest First'
                        when 'most_posts' then 'Most Posts'
                        else @sort
                        end %>
                    <%= link_to topics_path(search: params[:search]), class: "text-dark ms-1" do %>
                      <i class="bi bi-x"></i>
                    <% end %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if @topics.any? %>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <small class="text-muted">
            Showing <strong><%= @topics.offset_value + 1 %>-<%= @topics.offset_value + @topics.length %></strong> 
            of <strong><%= @topics.total_count %></strong> topics
          </small>
          <% if params[:search].present? || @sort != 'recent' %>
            <small class="text-warning">
              <i class="bi bi-info-circle me-1"></i>Filtered results
            </small>
          <% end %>
        </div>
      <% end %>

      <% if @topics.any? %>
        <div class="topics-list">
          <% @topics.each do |topic| %>
            <div class="card topic-card mb-3">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start gap-3">
                  
                  <div class="flex-grow-1">
                    <div class="d-flex align-items-center gap-2 mb-2">
                      <span class="posts-badge">
                        <i class="bi bi-file-text me-1"></i><%= topic.posts.count %> posts
                      </span>
                      <span class="date-badge">
                        <i class="bi bi-calendar me-1"></i><%= topic.created_at.strftime("%d/%m/%Y") %>
                      </span>
                    </div>

                    <h5 class="topic-title mb-2">
                      <%= link_to topic.title, topic, class: "text-decoration-none text-dark fw-bold" %>
                    </h5>
                    
                    <% if topic.description.present? %>
                      <p class="topic-description text-muted mb-3">
                        <%= truncate(topic.description, length: 200) %>
                      </p>
                    <% end %>

                    <div class="topic-meta d-flex flex-wrap align-items-center gap-3">
                      <small class="text-dark fw-medium">
                        <i class="bi bi-person me-1"></i><%= topic.user.name %>
                      </small>
                      <small class="text-muted">
                        <i class="bi bi-clock me-1"></i><%= time_ago_in_words(topic.created_at) %> ago
                      </small>
                      <% if topic.updated_at != topic.created_at %>
                        <small class="text-muted">
                          <i class="bi bi-arrow-clockwise me-1"></i>Updated <%= time_ago_in_words(topic.updated_at) %> ago
                        </small>
                      <% end %>
                    </div>
                  </div>

                  <div class="topic-actions d-flex gap-2 flex-shrink-0">
                    <%= link_to edit_topic_path(topic), class: "btn btn-action btn-edit", title: "Edit Topic" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>

                    <button type="button" class="btn btn-action btn-delete"
                            data-bs-toggle="modal" data-bs-target="#deleteTopicModal<%= topic.id %>"
                            title="Delete Topic">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>

                </div>
              </div>
            </div>

            <div class="modal fade" id="deleteTopicModal<%= topic.id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">Delete Topic</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    <p>Are you sure you want to delete the topic "<strong><%= topic.title %></strong>"?</p>
                    <div class="alert alert-warning border">
                      <i class="bi bi-exclamation-triangle me-2"></i>
                      This will also delete all posts associated with this topic.
                    </div>
                    <small class="text-muted">This action cannot be undone.</small>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <%= button_to topic_path(topic), method: :delete, class: "btn btn-danger" do %>
                      <i class="bi bi-trash me-1"></i>Delete Topic
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= paginate @topics %>
        </div>

      <% else %>
        <div class="card empty-state-card">
          <div class="card-body text-center py-5">
            <i class="bi bi-collection display-4 mb-3 text-muted"></i>
            <h5 class="text-muted mb-2">No topics found</h5>
            <p class="text-muted small mb-4">
              <% if params[:search].present? || @sort != 'recent' %>
                Try adjusting your filters or search terms
              <% else %>
                Be the first to create a topic in the community
              <% end %>
            </p>
            <div class="d-flex gap-2 justify-content-center">
              <% if params[:search].present? || @sort != 'recent' %>
                <%= link_to "Clear Filters", topics_path, class: "btn btn-outline-dark" %>
              <% end %>
              <%= link_to new_topic_path, class: "btn btn-dark" do %>
                <i class="bi bi-plus-circle me-2"></i>Create New Topic
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
