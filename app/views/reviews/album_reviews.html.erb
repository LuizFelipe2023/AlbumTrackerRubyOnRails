<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card border-0 rounded-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
        <!-- Card Header -->
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-chat-square-text me-2"></i>
            Reviews for <%= @album.title %>
            <% if @album.bands.any? %>
              &nbsp; | &nbsp;
              <i class="bi bi-music-note-list me-1"></i>
              <%= @album.bands.map(&:name).join(", ") %>
            <% end %>
          </h5>

          <div class="d-flex gap-2">
            <%= link_to new_review_path(album_id: @album.id), class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
              <i class="bi bi-plus-circle me-2"></i> Add Review
            <% end %>
            <%= link_to album_path(@album), class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
              <i class="bi bi-arrow-left me-2"></i> Album
            <% end %>
          </div>
        </div>

        <!-- Card Body -->
        <div class="card-body bg-white p-0">
          <% if @reviews.any? %>
            <div class="reviews-list">
              <% @reviews.each do |review| %>
                <div class="review-item border-bottom" style="border-color: #f0f0f0 !important; padding: 1.5rem;">

                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <h6 class="fw-semibold mb-1" style="color: #333; font-size: 1rem;">
                        <%= review.title %>
                      </h6>
                      <% if review.album.bands.any? %>
                        <div class="text-muted small">
                          <i class="bi bi-music-note-list me-1"></i>
                          <%= review.album.bands.map(&:name).join(", ") %>
                        </div>
                      <% end %>
                    </div>

                    <div class="d-flex align-items-center">
                      <i class="bi bi-star-fill text-warning me-1" style="font-size: 0.9rem;"></i>
                      <span class="fw-medium" style="color: #333; font-size: 0.9rem;">
                        <%= review.score %>/10
                      </span>
                    </div>
                  </div>

                  <div class="mb-3">
                    <div style="color: #666; line-height: 1.5; font-size: 0.9rem;">
                      <%= simple_format(review.content) %>
                    </div>
                  </div>

                  <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                      <i class="bi bi-person me-1"></i>
                      <%= review.user.email_address.upcase %>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                      <div class="text-muted small">
                        <% if review.created_at.present? %>
                          <i class="bi bi-calendar me-1"></i>
                          <%= review.created_at.strftime("%b %d, %Y") %>
                        <% end %>
                      </div>
                      <% if review.user == Current.user || Current.user&.admin? %>
                        <div class="d-flex gap-1">
                          <%= link_to edit_review_path(review), class: "btn btn-sm border-0 rounded-0 px-2", title: "Edit review", style: "background: transparent; color: #666;" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= button_to review_path(review), method: :delete, 
                              class: "btn btn-sm border-0 rounded-0 px-2", 
                              title: "Delete review",
                              style: "background: transparent; color: #666;",
                              form: { class: "d-inline", data: { turbo_confirm: "Are you sure you want to delete this review?" } } do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="bg-light p-4 border-top" style="border-color: #e0e0e0 !important;">
              <div class="row text-center">
                <div class="col-md-4 mb-3 mb-md-0">
                  <div class="text-muted small mb-1">TOTAL REVIEWS</div>
                  <div class="fw-semibold" style="color: #333; font-size: 1.1rem;">
                    <%= @reviews.count %>
                  </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                  <div class="text-muted small mb-1">AVERAGE RATING</div>
                  <div class="fw-semibold" style="color: #333; font-size: 1.1rem;">
                    <%= sprintf('%.1f', @reviews.average(:score)) %>/10
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="text-muted small mb-1">ALBUM & BANDS</div>
                  <div class="fw-semibold" style="color: #333; font-size: 1rem;">
                    <%= @album.title %>
                    <% if @album.bands.any? %>
                      <span class="text-muted small">
                        &nbsp; | &nbsp;
                        <i class="bi bi-music-note-list me-1"></i>
                        <%= @album.bands.map(&:name).join(", ") %>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-chat-square-text display-4 mb-3" style="color: #ccc;"></i>
              <h5 class="text-muted mb-2">No reviews yet</h5>
              <p class="text-muted small mb-4">Be the first to share your thoughts about this album</p>
              <%= link_to new_review_path(album_id: @album.id), class: "btn btn-dark rounded-0 border-0 px-4" do %>
                <i class="bi bi-plus-circle me-2"></i>Write First Review
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
