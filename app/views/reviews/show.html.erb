<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 rounded-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-chat-square-text me-2"></i>
            Review Details
          </h5>
          <%= link_to reviews_path, class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
            <i class="bi bi-arrow-left me-2"></i> Back to Reviews
          <% end %>
        </div>

        <div class="card-body bg-white p-4">
          <div class="review-info-section">
            <div class="mb-4">
              <label class="form-label fw-medium text-dark mb-2">Review Title</label>
              <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0; font-size: 1.1rem;">
                <%= @review.title %>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label fw-medium text-dark mb-2">Review Content</label>
              <div class="border rounded-0 bg-white p-3" style="min-height: 150px; color: #333; line-height: 1.5;">
                <%= simple_format(@review.content) %>
              </div>
            </div>

            <div class="row mb-4">
              <div class="col-md-4 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Reviewer</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <i class="bi bi-person me-2 text-muted"></i><%= @review.user.name %>
                </div>
              </div>

              <div class="col-md-4 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Album</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <i class="bi bi-disc me-2 text-muted"></i><%= @review.album.title %>
                </div>
              </div>

              <div class="col-md-4 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Rating</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <div class="d-flex align-items-center">
                    <i class="bi bi-star-fill text-warning me-2"></i>
                    <span class="fw-medium"><%= @review.score %>/10</span>
                  </div>
                </div>
              </div>
            </div>

            <% if @review.created_at.present? %>
              <div class="mb-4">
                <label class="form-label fw-medium text-dark mb-2">Review Date</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #666; min-height: auto; padding-left: 0; font-size: 0.9rem;">
                  <%= @review.created_at.strftime("%B %d, %Y at %H:%M") %>
                </div>
              </div>
            <% end %>

            <div class="mb-4">
              <label class="form-label fw-medium text-dark mb-2">Review ID</label>
              <div class="form-control-plaintext border-bottom pb-2" style="color: #666; min-height: auto; padding-left: 0; font-size: 0.9rem;">
                #<%= @review.id %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center pt-3 border-top" style="border-color: #e0e0e0 !important;">
            <div class="text-muted small">
              <i class="bi bi-info-circle me-1"></i>
              Album Review Information
            </div>
            <div class="d-flex gap-2">
              <%= link_to edit_review_path(@review), class: "btn btn-dark rounded-0 border-0 px-4 d-flex align-items-center" do %>
                <i class="bi bi-pencil me-2"></i>Edit Review
              <% end %>
            </div>
          </div>
        </div>

        <div class="card-footer bg-light text-muted small py-3 px-4 border-0 border-top" style="border-color: #e0e0e0 !important;">
          <div class="d-flex justify-content-between align-items-center">
            <span>
              <i class="bi bi-chat-square-text me-1"></i> 
              Review Management
            </span>
            <span class="text-muted">
              <%= @review.user.name %> â€¢ <%= @review.album.title %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
