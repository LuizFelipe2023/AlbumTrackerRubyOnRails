<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 rounded-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-vinyl me-2"></i>
            Band Profile
          </h5>
          <div class="d-flex justify-content-end gap-2">
            <%= render 'shared/favorites_buttons', band: @band %>
            <%= link_to bands_path, class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
              <i class="bi bi-arrow-left me-2"></i> Back
            <% end %>
          </div>
        </div>

        <div class="card-body bg-white p-4">
          <!-- Flash Messages -->
          <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show rounded-0 border-0 mb-4" style="background-color: #f0f9f0; color: #2d5c2d; border-left: 4px solid #28a745;" role="alert">
              <i class="bi bi-check-circle me-2"></i><%= flash[:notice] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show rounded-0 border-0 mb-4" style="background-color: #fdf0f0; color: #8b2a2a; border-left: 4px solid #dc3545;" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i><%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <div class="text-center mb-4">
            <% if @band.logo.attached? %>
              <%= image_tag url_for(@band.logo), class: "rounded-0 border", style: "max-width: 150px;" %>
            <% else %>
              <div class="bg-light d-inline-block p-4 border">
                <i class="bi bi-vinyl" style="font-size: 3rem; color: #ccc;"></i>
              </div>
              <p class="text-muted small mt-2">No logo uploaded</p>
            <% end %>
          </div>

          <div class="band-info-section">
            <div class="row mb-3">
              <div class="col-md-6 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Band Name</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0; font-size: 1.1rem;">
                  <%= @band.name %>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Country</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <%= @band.country.presence || "—" %>
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Formed In</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <%= @band.formed_in.presence || "—" %>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label class="form-label fw-medium text-dark mb-2">Genre</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <% if @band.genre %>
                    <span class="badge bg-dark rounded-0" style="font-size: 0.75rem; font-weight: 400;">
                      <%= @band.genre.name %>
                    </span>
                  <% else %>
                    <span class="text-muted">—</span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <% if @band.styles.any? %>
              <div class="mb-4">
                <label class="form-label fw-medium text-dark mb-2">Music Styles</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #333; min-height: auto; padding-left: 0;">
                  <div class="d-flex flex-wrap gap-1">
                    <% @band.styles.each do |style| %>
                      <span class="badge bg-dark rounded-0" style="font-size: 0.75rem; font-weight: 400;">
                        <%= style.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @band.created_at.present? %>
              <div class="mb-4">
                <label class="form-label fw-medium text-dark mb-2">Added to Collection</label>
                <div class="form-control-plaintext border-bottom pb-2" style="color: #666; min-height: auto; padding-left: 0; font-size: 0.9rem;">
                  <%= @band.created_at.strftime("%B %d, %Y") %>
                </div>
              </div>
            <% end %>

          
            <div class="mb-4">
              <label class="form-label fw-medium text-dark mb-2">Band ID</label>
              <div class="form-control-plaintext border-bottom pb-2" style="color: #666; min-height: auto; padding-left: 0; font-size: 0.9rem;">
                #<%= @band.id %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center pt-3 border-top" style="border-color: #e0e0e0 !important;">
            <div class="text-muted small">
              <i class="bi bi-info-circle me-1"></i>
              Music Band Information
            </div>
            <div class="d-flex gap-2">
              <%= link_to edit_band_path(@band), class: "btn btn-dark rounded-0 border-0 px-4 d-flex align-items-center" do %>
                <i class="bi bi-pencil me-2"></i>Edit Band
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>