<footer class="bg-dark border-top border-secondary mt-auto">
  <div class="container-md py-4">
    <div class="row">
      <!-- Logo and Description -->
      <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="d-flex align-items-center mb-3">
          <i class="bi bi-vinyl-fill text-primary me-2" style="font-size: 1.5rem;"></i>
          <span class="text-white fw-bold fs-5">ALBUMTRACKER</span>
        </div>
        <p class="text-light mb-3" style="font-size: 0.9rem; line-height: 1.4;">
          Your personal music collection manager. Track albums, rate reviews, and discover new music.
        </p>
        <div class="text-light small">
          <i class="bi bi-c-circle me-1"></i>
          <span>2025 AlbumTracker. All rights reserved.</span>
        </div>
      </div>

      <div class="col-6 col-md-3 col-lg-2 mb-4 mb-md-0">
        <h6 class="text-white fw-bold mb-3 text-uppercase small">Explore</h6>
        <ul class="list-unstyled">
          <li class="mb-2">
            <%= link_to "Bands", bands_path, class: "text-light text-decoration-none hover-primary", style: "font-size: 0.9rem;" %>
          </li>
          <li class="mb-2">
            <%= link_to "Albums", albums_path, class: "text-light text-decoration-none hover-primary", style: "font-size: 0.9rem;" %>
          </li>
          <li class="mb-2">
            <%= link_to "Reviews", reviews_path, class: "text-light text-decoration-none hover-primary", style: "font-size: 0.9rem;" %>
          </li>
          <li class="mb-2">
            <%= link_to "Favorites", favorites_path, class: "text-light text-decoration-none hover-primary", style: "font-size: 0.9rem;" %>
          </li>
        </ul>
      </div>

      <div class="col-6 col-md-3 col-lg-2 mb-4 mb-md-0">
        <h6 class="text-white fw-bold mb-3 text-uppercase small">Support</h6>
        <ul class="list-unstyled">
          <li class="mb-2">
            <a href="#" class="text-light text-decoration-none hover-primary" style="font-size: 0.9rem;">Help Center</a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-light text-decoration-none hover-primary" style="font-size: 0.9rem;">Contact Us</a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-light text-decoration-none hover-primary" style="font-size: 0.9rem;">Privacy Policy</a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-light text-decoration-none hover-primary" style="font-size: 0.9rem;">Terms of Service</a>
