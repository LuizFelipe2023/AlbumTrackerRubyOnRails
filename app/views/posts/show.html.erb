<div class="container-md py-4">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card post-card">

        <div class="card-header post-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">
              <i class="bi bi-chat-square-text me-2"></i>Post Details
            </h5>
            <span class="post-id-badge">
              ID: #<%= @post.id %>
            </span>
          </div>
        </div>

        <div class="card-body post-body">

          <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
              <i class="bi bi-check-circle me-2"></i><%= flash[:notice] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i><%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <div class="post-content-section">
            <div class="post-meta mb-3">
              <div class="user-avatar-small">
                <%= @post.user.name[0].upcase %>
              </div>
              <div>
                <span class="fw-medium"><%= @post.user.name %></span>
                <small class="text-muted">• <%= @post.created_at.strftime("%B %d, %Y at %H:%M") %></small>
              </div>
            </div>
            
            <h3 class="post-title fw-bold mb-3"><%= @post.title %></h3>
            <div class="post-text">
              <%= simple_format(@post.content) %>
            </div>
            <div class="post-topic mt-3">
              <span class="topic-badge">
                <i class="bi bi-tag me-1 text-white"></i><%= link_to @post.topic.title, @post.topic, class: "topic-link text-white" %>
              </span>
            </div>
          </div>

          <hr class="section-divider">

          <div class="comments-section">
            <h5 class="section-title mb-4">
              <i class="bi bi-chat-left-text me-2"></i>
              Comments <span class="comment-count">(<%= @post.comments.count %>)</span>
            </h5>

            <div class="comments-list">
              <% @post.comments.each do |comment| %>
                <div class="comment-card">
                  <div class="comment-body">
                    <div class="comment-content">
                      <p class="comment-text"><%= comment.content %></p>
                      <div class="comment-meta">
                        <div class="user-avatar-xs">
                          <%= comment.user.name[0].upcase %>
                        </div>
                        <span class="fw-medium"><%= comment.user.name %></span>
                        <small class="text-muted">• <%= comment.created_at.strftime("%B %d, %Y at %H:%M") %></small>
                      </div>
                    </div>

                    <% if comment.user == Current.user %>
                      <div class="comment-actions">
                        <button type="button" class="btn btn-edit" data-bs-toggle="modal" data-bs-target="#editCommentModal<%= comment.id %>">
                          <i class="bi bi-pencil"></i>
                        </button>

                        <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteCommentModal<%= comment.id %>">
                          <i class="bi bi-trash"></i>
                        </button>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="modal fade" id="editCommentModal<%= comment.id %>" tabindex="-1" aria-labelledby="editCommentModalLabel<%= comment.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header bg-dark text-white">
                        <h5 class="modal-title" id="editCommentModalLabel<%= comment.id %>">Edit Comment</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <%= form_with(model: [@post, comment], local: true) do |form| %>
                          <div class="mb-3">
                            <%= form.label :content, "Your Comment", class: "form-label fw-medium" %>
                            <%= form.text_area :content, class: "form-control", rows: 4, placeholder: "Share your thoughts..." %>
                          </div>
                          <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <%= form.submit "Update Comment", class: "btn btn-dark" %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="modal fade" id="deleteCommentModal<%= comment.id %>" tabindex="-1" aria-labelledby="deleteCommentModalLabel<%= comment.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header bg-dark text-white">
                        <h5 class="modal-title" id="deleteCommentModalLabel<%= comment.id %>">Delete Comment</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <p>Are you sure you want to delete this comment? This action cannot be undone.</p>
                        <div class="comment-preview p-3 bg-light rounded">
                          <em>"<%= truncate(comment.content, length: 100) %>"</em>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <%= button_to post_comment_path(@post, comment), method: :delete, class: "btn btn-danger" do %>
                          <i class="bi bi-trash me-1"></i>Delete Comment
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="add-comment-section mt-4">
              <h6 class="fw-semibold mb-3">Add a Comment</h6>
              <div class="comment-form-card">
                <div class="card-body">
                  <%= form_with(model: [@post, Comment.new], local: true) do |form| %>
                    <div class="mb-3">
                      <%= form.text_area :content, class: "form-control", rows: 4, placeholder: "Write your comment here..." %>
                    </div>
                    <%= form.submit "Post Comment", class: "btn btn-dark btn-lg" %>
                  <% end %>
                </div>
              </div>
            </div>

          </div>

        </div>

        <div class="card-footer post-footer">
          <div class="d-flex justify-content-between align-items-center">
            <span>
              <i class="bi bi-chat-left-text me-1"></i> 
              <%= @post.comments.count %> comment<%= @post.comments.count == 1 ? '' : 's' %>
            </span>
            <small class="text-muted">
              Last updated: <%= time_ago_in_words(@post.updated_at) %> ago
            </small>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

