<div class="container-md py-4 posts-container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-10 col-md-12">
  
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-dark"><i class="bi bi-chat-text me-2"></i>Community Posts</h4>
        <%= link_to new_post_path, class: "btn btn-dark btn-sm d-flex align-items-center gap-2" do %>
          <i class="bi bi-plus-circle"></i>New Post
        <% end %>
      </div>

      <div class="card filter-card mb-4">
        <div class="card-body p-4">
          <h6 class="fw-semibold mb-3 text-dark">
            <i class="bi bi-funnel me-2"></i>Filter Posts
          </h6>
          
          <%= form_with url: posts_path, method: :get, local: true, class: "row g-3 align-items-end" do |form| %>
            <div class="col-md-4">
              <%= form.label :topic_id, "Topic", class: "form-label fw-medium text-dark mb-2" %>
              <%= form.select :topic_id, 
                  options_for_select(
                    @topics.map { |t| [t.title, t.id] }, 
                    selected: params[:topic_id]
                  ), 
                  { include_blank: "All Topics" }, 
                  class: "form-select form-select-sm choices-topic" %>
            </div>
            
            <div class="col-md-4">
              <%= form.label :search, "Search Title", class: "form-label fw-medium text-dark mb-2" %>
              <%= form.text_field :search, 
                  value: params[:search], 
                  class: "form-control form-control-sm", 
                  placeholder: "Enter keywords..." %>
            </div>
            
            <div class="col-md-4">
              <div class="d-flex gap-2">
                <%= form.submit "Apply Filters", class: "btn btn-dark btn-sm flex-fill" %>
                <%= link_to "Clear", posts_path, class: "btn btn-outline-secondary btn-sm flex-fill" %>
              </div>
            </div>
          <% end %>

          <% if params[:topic_id].present? || params[:search].present? %>
            <div class="mt-3 pt-3 border-top">
              <small class="text-muted fw-medium">Active Filters:</small>
              <div class="d-flex flex-wrap gap-2 mt-1">
                <% if params[:topic_id].present? %>
                  <% topic = @topics.find { |t| t.id.to_s == params[:topic_id] } %>
                  <span class="badge bg-dark bg-opacity-10 text-dark border">
                    <i class="bi bi-tag me-1"></i><%= topic&.title %>
                    <%= link_to posts_path(search: params[:search]), class: "text-dark ms-1" do %>
                      <i class="bi bi-x"></i>
                    <% end %>
                  </span>
                <% end %>
                <% if params[:search].present? %>
                  <span class="badge bg-dark bg-opacity-10 text-dark border">
                    <i class="bi bi-search me-1"></i>"<%= params[:search] %>"
                    <%= link_to posts_path(topic_id: params[:topic_id]), class: "text-dark ms-1" do %>
                      <i class="bi bi-x"></i>
                    <% end %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if @posts.any? %>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <small class="text-muted">
            Showing <strong><%= @posts.offset_value + 1 %>-<%= @posts.offset_value + @posts.length %></strong> 
            of <strong><%= @posts.total_count %></strong> posts
          </small>
          <% if params[:topic_id].present? || params[:search].present? %>
            <small class="text-warning">
              <i class="bi bi-info-circle me-1"></i>Filtered results
            </small>
          <% end %>
        </div>
      <% end %>

      <% if @posts.any? %>
        <div class="posts-list">
          <% @posts.each do |post| %>
            <div class="card post-card mb-3">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start gap-3">
                  
                  <div class="flex-grow-1">
                    <div class="d-flex align-items-center gap-2 mb-2">
                      <span class="topic-badge text-white">
                        <i class="bi bi-tag me-1"></i><%= post.topic.title %>
                      </span>
                      <span class="comments-badge">
                        <i class="bi bi-chat me-1"></i><%= post.comments_count %>
                      </span>
                    </div>

                    <h5 class="post-title mb-2">
                      <%= link_to post.title, post, class: "text-decoration-none text-dark fw-bold" %>
                    </h5>
                    
                    <p class="post-preview text-muted mb-3">
                      <%= truncate(post.content, length: 200) %>
                    </p>

                    <div class="post-meta d-flex flex-wrap align-items-center gap-3">
                      <small class="text-dark fw-medium">
                        <i class="bi bi-person me-1"></i><%= post.user.name %>
                      </small>
                      <small class="text-muted">
                        <i class="bi bi-clock me-1"></i><%= time_ago_in_words(post.created_at) %> ago
                      </small>
                      <small class="text-muted">
                        <i class="bi bi-calendar me-1"></i><%= post.created_at.strftime("%d/%m/%Y") %>
                      </small>
                    </div>
                  </div>

                
                  <div class="post-actions d-flex gap-2 flex-shrink-0">
                    <%= link_to edit_post_path(post), class: "btn btn-action btn-edit", title: "Edit Post" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>

                    <button type="button" class="btn btn-action btn-delete"
                            data-bs-toggle="modal" data-bs-target="#deletePostModal<%= post.id %>"
                            title="Delete Post">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>

                </div>
              </div>
            </div>

            <div class="modal fade" id="deletePostModal<%= post.id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">Delete Post</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    <p>Are you sure you want to delete this post?</p>
                    <div class="alert alert-light border">
                      <strong><%= post.title %></strong>
                    </div>
                    <small class="text-muted">This action cannot be undone.</small>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <%= button_to post_path(post), method: :delete, class: "btn btn-danger" do %>
                      <i class="bi bi-trash me-1"></i>Delete Post
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= paginate @posts %>
        </div>

      <% else %>
        <div class="card empty-state-card">
          <div class="card-body text-center py-5">
            <i class="bi bi-chat-text display-4 mb-3 text-muted"></i>
            <h5 class="text-muted mb-2">No posts found</h5>
            <p class="text-muted small mb-4">
              <% if params[:topic_id].present? || params[:search].present? %>
                Try adjusting your filters or search terms
              <% else %>
                Be the first to start a discussion in the community
              <% end %>
            </p>
            <div class="d-flex gap-2 justify-content-center">
              <% if params[:topic_id].present? || params[:search].present? %>
                <%= link_to "Clear Filters", posts_path, class: "btn btn-outline-dark" %>
              <% end %>
              <%= link_to new_post_path, class: "btn btn-dark" do %>
                <i class="bi bi-plus-circle me-2"></i>Create New Post
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
