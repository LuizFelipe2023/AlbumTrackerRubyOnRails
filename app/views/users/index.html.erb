<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card border-0 rounded-0 overflow-hidden" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <div class="d-flex align-items-center">
            <i class="bi bi-people-fill fs-5 me-2"></i>
            <h4 class="mb-0 fw-semibold" style="font-size: 1.25rem;">User Management</h4>
          </div>
          <%= link_to new_user_path, class: "btn btn-outline-light btn-sm fw-medium d-flex align-items-center border border-light" do %>
            <i class="bi bi-plus-circle me-2"></i> Add User
          <% end %>
        </div>

        <div class="card-body bg-white p-0">
          <!-- Flash Messages -->
          <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show rounded-0 border-0 m-4 mb-0" style="background-color: #f0f9f0; color: #2d5c2d; border-left: 4px solid #28a745;" role="alert">
              <i class="bi bi-check-circle me-2"></i><%= flash[:notice] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show rounded-0 border-0 m-4 mb-0" style="background-color: #fdf0f0; color: #8b2a2a; border-left: 4px solid #dc3545;" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i><%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <% if @users.any? %>
            <div class="table-container mt-4">
              <table class="table table-hover align-middle mb-0 rounded-0 border-0">
                <thead class="bg-light text-dark border-bottom" style="border-color: #e0e0e0 !important;">
                  <tr>
                    <th scope="col" class="text-start ps-4 py-3 fw-semibold border-0" style="font-size: 0.9rem;">NAME</th>
                    <th scope="col" class="py-3 fw-semibold border-0" style="font-size: 0.9rem;">USERNAME</th>
                    <th scope="col" class="py-3 fw-semibold border-0" style="font-size: 0.9rem;">EMAIL</th>
                    <th scope="col" class="text-center py-3 fw-semibold border-0" style="font-size: 0.9rem;">ACTIONS</th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @users.each do |user| %>
                    <tr class="border-bottom" style="border-color: #f0f0f0 !important;">
                      <td class="text-start ps-4 fw-medium py-3 border-0" style="color: #333;">
                        <%= user.name %>
                      </td>
                      <td class="py-3 border-0" style="color: #666;">
                        <%= user.username %>
                      </td>
                      <td class="py-3 border-0" style="color: #666;">
                        <%= user.email_address %>
                      </td>
                      <td class="text-center py-3 border-0">
                        <div class="d-flex justify-content-center gap-1">
                        
                          <%= link_to user_path(user), class: "btn btn-sm border-0 rounded-0 action-btn", title: "View", data: { bs_toggle: "tooltip" } do %>
                            <i class="bi bi-eye" style="color: #666;"></i>
                          <% end %>

                        
                          <%= link_to edit_user_path(user), class: "btn btn-sm border-0 rounded-0 action-btn", title: "Edit", data: { bs_toggle: "tooltip" } do %>
                            <i class="bi bi-pencil" style="color: #666;"></i>
                          <% end %>

                       
                          <button type="button" class="btn btn-sm border-0 rounded-0 action-btn"
                                  data-bs-toggle="modal" data-bs-target="#deleteUserModal<%= user.id %>"
                                  title="Delete" data-bs-toggle="tooltip">
                            <i class="bi bi-trash" style="color: #666;"></i>
                          </button>

                          <div class="modal fade" id="deleteUserModal<%= user.id %>" tabindex="-1"
                              aria-labelledby="deleteUserModalLabel<%= user.id %>" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content border-0 rounded-0" style="box-shadow: 0 4px 20px rgba(0,0,0,0.15);">
                                <div class="modal-header bg-white border-bottom py-3">
                                  <h5 class="modal-title fw-semibold" id="deleteUserModalLabel<%= user.id %>" style="color: #333;">
                                    <i class="bi bi-exclamation-octagon me-2 text-danger"></i>Confirm Deletion
                                  </h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center py-4">
                                  <p class="mb-2" style="color: #333;">Are you sure you want to delete</p>
                                  <p class="fw-semibold mb-0" style="color: #333; font-size: 1.1rem;"><%= user.name %></p>
                                  <p class="text-muted small mt-1">This action cannot be undone</p>
                                </div>
                                <div class="modal-footer d-flex justify-content-center border-0 pt-0">
                                  <button type="button" class="btn btn-outline-secondary rounded-0 px-4 border" data-bs-dismiss="modal">
                                    Cancel
                                  </button>
                                  <%= button_to user_path(user), method: :delete, form_class: "d-inline", class: "btn btn-dark rounded-0 px-4 border-0" do %>
                                    Delete
                                  <% end %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

           
            <div class="d-flex justify-content-between align-items-center px-4 py-3 border-top" style="border-color: #e0e0e0 !important;">
              <div class="text-muted small">
                Showing <%= @users.offset_value + 1 %> to <%= @users.offset_value + @users.length %> of <%= @users.total_count %> entries
              </div>
              <div class="pagination-container">
                <%= paginate @users %>
              </div>
            </div>

          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-person-x display-4 mb-3" style="color: #ccc;"></i>
              <p class="text-muted mb-2 fs-5">No users found</p>
              <p class="text-muted small">Get started by adding your first user</p>
              <%= link_to new_user_path, class: "btn btn-dark rounded-0 mt-2 px-4 border-0" do %>
                <i class="bi bi-plus-circle me-2"></i>Add User
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>