<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card border-0 rounded-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-tags me-2"></i>Music Styles
          </h5>
          <%= link_to new_style_path, class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
            <i class="bi bi-plus-circle me-2"></i> Add Style
          <% end %>
        </div>

        <div class="card-body bg-white p-0">
          <% if @styles.any? %>
            <div class="table-container">
              <table class="table table-hover align-middle mb-0 rounded-0 border-0">
                <thead class="bg-light text-dark border-bottom" style="border-color: #e0e0e0 !important;">
                  <tr>
                    <th scope="col" class="ps-4 py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Style Name</th>
                    <th scope="col" class="py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Genre</th>
                    <th scope="col" class="text-center py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @styles.each do |style| %>
                    <tr class="border-bottom" style="border-color: #f0f0f0 !important;">
                      <td class="ps-4 py-3 border-0 fw-medium" style="color: #333;">
                        <%= style.name %>
                      </td>
                      <td class="py-3 border-0" style="color: #666;">
                        <%= style.genre.name %>
                      </td>
                      <td class="text-center py-3 border-0">
                        <div class="d-flex justify-content-center gap-1">
                        
                          <%= link_to style_path(style), class: "btn btn-sm border-0 rounded-0 action-btn", title: "View details", data: { bs_toggle: "tooltip" } do %>
                            <i class="bi bi-eye" style="color: #666;"></i>
                          <% end %>

                          
                          <%= link_to edit_style_path(style), class: "btn btn-sm border-0 rounded-0 action-btn", title: "Edit style", data: { bs_toggle: "tooltip" } do %>
                            <i class="bi bi-pencil" style="color: #666;"></i>
                          <% end %>

                        
                          <button type="button" class="btn btn-sm border-0 rounded-0 action-btn"
                                  data-bs-toggle="modal" data-bs-target="#deleteStyleModal<%= style.id %>"
                                  title="Delete style" data-bs-toggle="tooltip">
                            <i class="bi bi-trash" style="color: #666;"></i>
                          </button>

                        
                          <div class="modal fade" id="deleteStyleModal<%= style.id %>" tabindex="-1"
                              aria-labelledby="deleteStyleModalLabel<%= style.id %>" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content border-0 rounded-0" style="box-shadow: 0 4px 20px rgba(0,0,0,0.15);">
                                <div class="modal-header bg-white border-bottom py-3">
                                  <h5 class="modal-title fw-semibold" id="deleteStyleModalLabel<%= style.id %>" style="color: #333;">
                                    <i class="bi bi-exclamation-octagon me-2 text-danger"></i>Confirm Deletion
                                  </h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center py-4">
                                  <p class="mb-2" style="color: #333;">Are you sure you want to delete</p>
                                  <p class="fw-semibold mb-1" style="color: #333; font-size: 1.1rem;"><%= style.name %></p>
                                  <p class="text-muted small mb-0">Genre: <%= style.genre.name %></p>
                                  <p class="text-muted small mt-3">This action cannot be undone</p>
                                </div>
                                <div class="modal-footer d-flex justify-content-center border-0 pt-0">
                                  <button type="button" class="btn btn-outline-secondary rounded-0 px-4 border" data-bs-dismiss="modal">
                                    Cancel
                                  </button>
                                  <%= button_to style_path(style), method: :delete, form_class: "d-inline", class: "btn btn-dark rounded-0 px-4 border-0" do %>
                                    Delete
                                  <% end %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

          
            <div class="d-flex justify-content-between align-items-center px-4 py-3 border-top" style="border-color: #e0e0e0 !important;">
              <div class="text-muted small">
                Showing <%= @styles.offset_value + 1 %> to <%= @styles.offset_value + @styles.length %> of <%= @styles.total_count %> entries
              </div>
              <div class="pagination-container">
                <%= paginate @styles%>
              </div>
            </div>

          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-tags display-4 mb-3" style="color: #ccc;"></i>
              <p class="text-muted mb-2 fs-5">No styles found</p>
              <p class="text-muted small mb-4">Get started by creating your first music style</p>
              <%= link_to new_style_path, class: "btn btn-dark rounded-0 border-0 px-4" do %>
                <i class="bi bi-plus-circle me-2"></i>Add New Style
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>