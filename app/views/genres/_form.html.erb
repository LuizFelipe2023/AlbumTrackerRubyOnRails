<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card border-0 rounded-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
        <!-- Card Header -->
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-tag me-2"></i>
            <%= genre.persisted? ? "Edit Genre" : "New Genre" %>
          </h5>
          <%= link_to genres_path, class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
            <i class="bi bi-arrow-left me-2"></i> Back to Genres
          <% end %>
        </div>

        <!-- Card Body -->
        <div class="card-body bg-white p-4">
          <%= form_with(model: genre, local: true, class: "genre-form") do |form| %>
            
            <!-- Error Messages -->
            <% if genre.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show rounded-0 border-0 mb-4" 
                   style="background-color: #fdf0f0; color: #8b2a2a; border-left: 4px solid #dc3545;" role="alert">
                <div class="d-flex align-items-center mb-2">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  <h6 class="mb-0 fw-semibold">
                    <%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:
                  </h6>
                </div>
                <ul class="mb-0 ps-3" style="font-size: 0.9rem;">
                  <% genre.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <!-- Genre Name Field -->
            <div class="mb-4">
              <%= form.label :name, "Genre Name", class: "form-label fw-medium text-dark mb-2" %>
              <%= form.text_field :name, class: "form-control rounded-0 border", 
                  placeholder: "Enter genre name" %>
            </div>

            <!-- Form Actions -->
            <div class="d-flex justify-content-between align-items-center pt-3 border-top" style="border-color: #e0e0e0 !important;">
              <div class="text-muted small">
                <i class="bi bi-info-circle me-1"></i>
                <%= genre.persisted? ? "Update genre information" : "Create new music genre" %>
              </div>
              <div class="d-flex gap-2">
                <%= link_to genres_path, class: "btn btn-outline-secondary rounded-0 border px-4 d-flex align-items-center" do %>
                  <i class="bi bi-x-circle me-2"></i>Cancel
                <% end %>
                <%= form.submit (genre.persisted? ? "Update Genre" : "Create Genre"), 
                    class: "btn btn-dark rounded-0 border-0 px-4 d-flex align-items-center" %>
              </div>
            </div>

          <% end %>
        </div>

        <!-- Card Footer -->
        <div class="card-footer bg-light text-muted small py-3 px-4 border-0 border-top" style="border-color: #e0e0e0 !important;">
          <div class="text-center">
            <i class="bi bi-collection me-1"></i> Genre Management
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

