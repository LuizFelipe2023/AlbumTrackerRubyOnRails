<div class="container-md py-4">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-10 col-md-12">
      <div class="card border-0 rounded-0 shadow-sm">

        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-collection me-2"></i>
            Genres
          </h5>
          <%= link_to new_genre_path, class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
            <i class="bi bi-plus-circle me-2"></i> Add Genre
          <% end %>
        </div>

        <div class="card-body bg-white p-0">
          <% if @genres&.any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0 text-center rounded-0 border-0">
                <thead class="bg-light text-dark border-bottom" style="border-color: #e0e0e0 !important;">
                  <tr>
                    <th class="py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem;">Name</th>
                    <th class="py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem;">Actions</th>
                  </tr>
                </thead>

                <tbody class="bg-white">
                  <% @genres.each do |genre| %>
                    <tr class="border-bottom" style="border-color: #f0f0f0 !important;">
                      <td class="py-3 border-0 fw-medium text-dark"><%= genre.name %></td>
                      <td class="py-3 border-0">
                        <div class="d-flex justify-content-center gap-1">
                          <%= link_to genre_path(genre), class: "btn btn-sm border-0 rounded-0", title: "View genre" do %>
                            <i class="bi bi-eye" style="color: #666;"></i>
                          <% end %>
                          <%= link_to edit_genre_path(genre), class: "btn btn-sm border-0 rounded-0", title: "Edit genre" do %>
                            <i class="bi bi-pencil" style="color: #666;"></i>
                          <% end %>
                          <%= link_to genre_path(genre), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm border-0 rounded-0", title: "Delete genre" do %>
                            <i class="bi bi-trash" style="color: #666;"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div class="d-flex justify-content-center py-3 border-top" style="border-color: #e0e0e0 !important;">
              <%= paginate @genres %>
            </div>

          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-collection display-4 mb-3" style="color: #ccc;"></i>
              <p class="text-muted mb-2 fs-5">No genres found</p>
              <p class="text-muted small mb-4">Add a new genre to start organizing your albums</p>
              <%= link_to new_genre_path, class: "btn btn-dark rounded-0 border-0 px-4" do %>
                <i class="bi bi-plus-circle me-2"></i>Add Genre
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
