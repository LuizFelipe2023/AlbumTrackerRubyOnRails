<div class="container-md py-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card border-0 rounded-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        
       
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3 px-4 border-0 rounded-0">
          <h5 class="mb-0 fw-semibold">
            <i class="bi bi-collection me-2"></i>Music Genres
          </h5>
          <%= link_to new_genre_path, class: "btn btn-outline-light btn-sm border d-flex align-items-center" do %>
            <i class="bi bi-plus-circle me-2"></i> Add Genre
          <% end %>
        </div>

      
        <div class="card-body bg-white p-0">
          <% if @genres.any? %>
            <div class="table-container">
              <table class="table table-hover align-middle mb-0 rounded-0 border-0">
                <thead class="bg-light text-dark border-bottom" style="border-color: #e0e0e0 !important;">
                  <tr>
                    <th scope="col" class="text-center py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px; width: 60px;">#</th>
                    <th scope="col" class="py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Genre Name</th>
                    <th scope="col" class="text-center py-3 fw-semibold border-0 text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px; width: 120px;">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @genres.each_with_index do |genre, index| %>
                    <tr class="border-bottom" style="border-color: #f0f0f0 !important;">
                     
                      <td class="text-center py-3 border-0" style="color: #666; font-size: 0.9rem;">
                        <%= index + 1 %>
                      </td>

                     
                      <td class="py-3 border-0 fw-medium" style="color: #333;">
                        <%= genre.name %>
                      </td>

                   
                      <td class="text-center py-3 border-0">
                        <div class="d-flex justify-content-center gap-1">
                          <!-- View Button -->
                          <%= link_to genre_path(genre), class: "btn btn-sm border-0 rounded-0 action-btn", title: "View genre", data: { bs_toggle: "tooltip" } do %>
                            <i class="bi bi-eye" style="color: #666;"></i>
                          <% end %>

                         
                          <%= link_to edit_genre_path(genre), class: "btn btn-sm border-0 rounded-0 action-btn", title: "Edit genre", data: { bs_toggle: "tooltip" } do %>
                            <i class="bi bi-pencil" style="color: #666;"></i>
                          <% end %>

                         
                          <button type="button" class="btn btn-sm border-0 rounded-0 action-btn"
                                  data-bs-toggle="modal" data-bs-target="#deleteGenreModal<%= genre.id %>"
                                  title="Delete genre" data-bs-toggle="tooltip">
                            <i class="bi bi-trash" style="color: #666;"></i>
                          </button>

                          <div class="modal fade" id="deleteGenreModal<%= genre.id %>" tabindex="-1"
                              aria-labelledby="deleteGenreModalLabel<%= genre.id %>" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content border-0 rounded-0" style="box-shadow: 0 4px 20px rgba(0,0,0,0.15);">
                                <div class="modal-header bg-white border-bottom py-3">
                                  <h5 class="modal-title fw-semibold" id="deleteGenreModalLabel<%= genre.id %>" style="color: #333;">
                                    <i class="bi bi-exclamation-octagon me-2 text-danger"></i>Confirm Deletion
                                  </h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center py-4">
                                  <p class="mb-2" style="color: #333;">Are you sure you want to delete</p>
                                  <p class="fw-semibold mb-1" style="color: #333; font-size: 1.1rem;">"<%= genre.name %>"</p>
                                  <p class="text-muted small mt-3">This action cannot be undone</p>
                                </div>
                                <div class="modal-footer d-flex justify-content-center border-0 pt-0">
                                  <button type="button" class="btn btn-outline-secondary rounded-0 px-4 border" data-bs-dismiss="modal">
                                    Cancel
                                  </button>
                                  <%= button_to genre_path(genre), method: :delete, form_class: "d-inline", class: "btn btn-dark rounded-0 px-4 border-0" do %>
                                    Delete
                                  <% end %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-collection display-4 mb-3" style="color: #ccc;"></i>
              <p class="text-muted mb-2 fs-5">No genres found</p>
              <p class="text-muted small mb-4">Start by creating your first music genre</p>
              <%= link_to new_genre_path, class: "btn btn-dark rounded-0 border-0 px-4" do %>
                <i class="bi bi-plus-circle me-2"></i>Add First Genre
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="card-footer bg-light text-muted small py-3 px-4 border-0 border-top" style="border-color: #e0e0e0 !important;">
          <div class="d-flex justify-content-between align-items-center">
            <span>
              <i class="bi bi-database me-1"></i> 
              <%= @genres.count %> <%= @genres.count == 1 ? 'genre' : 'genres' %> total
            </span>
            <span class="text-muted">
              Genre Management
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
